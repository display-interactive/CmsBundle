{% extends 'DisplayCmsBundle::backend_layout.html.twig' %}

{% block display_cms_admin_content %}
    <div class="page-header">
        <h1>
            <a href="{{ path('display_cms_backend_menu_new') }}" class="btn btn-primary pull-right ml5">
                Create a new entry
            </a>
            Menu
        </h1>
    </div>

    {% if entities|length > 0 %}
    <table class="table table-striped table-condensed table-hover">
        <thead>
            <tr>
                <th>Locale</th>
                <th>Created</th>
                <th>Updated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.page.locale }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <a href="{{ path('display_cms_backend_menu_edit', { 'locale': entity.page.locale }) }}" class="btn btn-xs btn-success ml5">edit</a>
                    <a href="{{ path('display_cms_backend_menu_edit', { 'locale': entity.page.locale }) }}" class="btn btn-xs btn-danger ml5 data-confirm">delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% else %}
        <div class="alert alert-info">no menu</div>
    {% endif %}
{% endblock %}
